  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@sovereign-sdk/types": "workspace:^",
    "@sovereign-sdk/web3": "workspace:^",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "4.0.7"
  },
  "peerDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sovereign-sdk/signers": "workspace:^",
    "@sovereign-sdk/utils": "workspace:^"
