{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsup.config.ts"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**", "package.json", "biome.json"]
    },
    "fix": {
      "outputs": [],
      "inputs": ["src/**", "package.json", "biome.json"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "tests/**", "package.json"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "tests/**", "package.json"]
    },
    "ci": {
      "dependsOn": ["typecheck", "lint", "test"],
      "outputs": []
    },
    "docs": {
      "dependsOn": ["^build"],
      "outputs": ["docs/**"],
      "inputs": ["src/**", "package.json", "typedoc.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    "package.json",
    "pnpm-workspace.yaml",
    "turbo.json",
    "biome.json",
    "vitest.config.ts"
  ]
}
